{{#extends 'base'}}

{{#block "content"}}
    <h1>Hello World!</h1>

    <table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Summary</th>
            <th>Number of Beds</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
        {{#each records}}
         <tr>
            <td>{{this.name}}</td>
            <td>{{this.summary}}</td>
            <td>{{this.beds}}</td>
            <td><button type="button" id="editButton" class="btn btn-warning">Edit</button></td>
            <td><button type="button" class="btn btn-danger">Delete</button></td>
         </tr>   
        {{/each}}
    </thead>

</table>

{{/block}}

{{/extends}}